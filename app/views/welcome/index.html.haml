.row
  .container
    .col-xs-10.col-xs-offset-1.col-md-6.col-md-offset-0.homepage_content
      %h2 About
      %hr
      %p I am a Ruby on Rails developer living in sunny Phoenix, AZ

    .col-xs-10.col-xs-offset-1.col-md-3.col-md-offset-0.homepage_content
      %h2 Blog
      %hr
      - @posts.each do |post|
        %h3= link_to post.title, post
        %p.date= post.created_at.strftime("%A, %b %d")

    .col-xs-10.col-xs-offset-1.col-md-3.col-md-offset-0.homepage_content
      %h2 Projects
      %hr
      - @projects.each do |post|
        = link_to image_tag(post.image.url(:small)), post, id: 'project_image'
        %h3= link_to post.title, post
        %p.date= post.created_at.strftime("%A, %b %d")
